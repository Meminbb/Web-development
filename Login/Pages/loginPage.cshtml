@page
@model LoginModel
@{
    ViewData[index: "Title"] = "Login";
}

<div class="container mt-5" style="max-width:400px;">
    <h2 class="text-center mb-4">Iniciar Sesión</h2>

    <div class="mb-3">
        <label class="form-label">Usuario</label>
        <input class="form-control" placeholder="Ingrese su usuario" />
    </div>

    <div class="mb-3">
        <label class="form-label">Contraseña</label>
        <input class="form-control" placeholder="Ingrese su contraseña" />
    </div>

    <button type="submit" onclick="location.href='/Privacy'" class="btn btn-primary w-100">Ingresar</button>
</div>
